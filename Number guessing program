#include <iostream>
#include <cstdlib>
#include <ctime>
int main() {
    srand(time(NULL));//To ensure the random number changes every time the program is executed.
    int number = rand() % 100 + 1;
    int guess = 0;
    int attempts = 0;
    std::cout << "Welcome to the Number Guessing Game!\n";
    do {  // code inside the loop runs at least once before the condition is checked.
        std::cout << "Guess a number between 1 and 100: ";
        std::cin >> guess;
        attempts++;
        if (guess < number) {
            std::cout << "Too low! Try again.\n";
        } else if (guess > number) {
            std::cout << "Too high! Try again.\n";
        }
    } while (guess != number);
    std::cout << "Congratulations! You guessed it in " << attempts << " attempts!\n";
    return 0;
}
